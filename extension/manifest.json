{
  "manifest_version": 3,
  "name": "PowerApps Formula Editor",
  "version": "2.0.0",
  "description": "Enhanced formula editor for Microsoft PowerApps with popup window support",
  "author": "PowerApps Community",
  
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://make.powerapps.com/*",
    "https://make.preview.powerapps.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://make.powerapps.com/*",
        "https://make.preview.powerapps.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup/menu.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "PowerApps Formula Editor"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "options_page": "options/options.html",
  
  "commands": {
    "open-editor": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Open formula editor"
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  }
}